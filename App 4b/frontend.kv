<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 10 # around edge of screen
        spacing: 10 # between widgets
        Camera:
            resolution: (640, 480)
            id: camera
            size_hint_y: 0.8
            play: False
            opacity: 0
        Button:
            text: 'Start Camera'
            id: camera_button
            size_hint_y: 0.1
            on_press: root.start() if root.ids.camera.play == False else root.stop()
        Button:
            text: 'Capture Image'
            size_hint_y: 0.1
            on_press: root.capture()

<ImageScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Image:
            id: img
            size_hint_y: 0.7
        Button:
            text: "Create Shareable Link"
            on_press: root.create_link()
            size_hint_y: 0.1
        Label:
            text: ""
            id: link
            size_hint_y: 0.1
        GridLayout:
            cols: 2
            size_hint_y: 0.1
            Button:
                text: "Copy Link"
                on_press: root.copy_link()
            Button:
                text: "Open Link"
                on_press: root.open_link()

<RootWidget>:
    canvas.before:
        Color:
            rgba: (0.2, 0.3, 0.5, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'
    ImageScreen:
        id: image_screen
        name: 'image_screen'
